<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorPickerView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.chinalwb.are.colorpicker.ColorPickerView
        android:id="@+id/rteColorPalette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        colorPickerView:colorViewHeight="30dp"
        colorPickerView:colorViewWidth="30dp"
        colorPickerView:colorViewMarginLeft="2dp"
        colorPickerView:colorViewMarginRight="2dp"
        colorPickerView:colorViewCheckedType="checkMark"
        colorPickerView:colors="@array/colorPickerColors"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorPrimary">

            <ImageView
                android:id="@+id/rteFontsize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/fontsize"
                android:visibility="visible"
                android:background="@drawable/bg_icon"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/rteFontface"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/fontface"
                android:visibility="gone"
                android:background="@drawable/bg_icon"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/rteBold"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_format_bold_24"
                android:tint="@drawable/tint_selector"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteItalic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_format_italic_24"
                android:tint="@drawable/tint_selector"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteUnderline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_format_underlined_24"
                android:tint="@drawable/tint_selector"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteStrikethrough"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_format_strikethrough_24"
                android:tint="@drawable/tint_selector"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteHr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:src="@drawable/hr"
                android:background="@drawable/bg_icon"/>


            <ImageView
                android:id="@+id/rteSubscript"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_margin="4dp"
                android:src="@drawable/subscript"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteSuperscript"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:src="@drawable/superscript"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteQuote"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:padding="5dp"
                android:src="@drawable/quote"
                android:background="@drawable/bg_icon"/>


            <ImageView
                android:id="@+id/rteFontColor"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_color_lens_24"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/background"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteLink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_insert_link_black_48dp"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteListNumber"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/listnumber"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteListBullet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/listbullet"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteIndentRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/indentright"
                android:visibility="gone"
                android:background="@drawable/bg_icon"
                 />

            <ImageView
                android:id="@+id/rteIndentLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/indentleft"
                android:visibility="gone"
                android:background="@drawable/bg_icon"
                />

            <ImageView
                android:id="@+id/rteAlignLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/alignleft"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteAlignCenter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/aligncenter"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteAlignRight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/alignright"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteInsertImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/image"
                android:background="@drawable/bg_icon"/>

            <ImageView
                android:id="@+id/rteInsertVideo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/video"
                android:background="@drawable/bg_icon"
                />

            <ImageView
                android:id="@+id/rteAt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/at"
                android:visibility="gone"
                android:background="@drawable/bg_icon"/>
        </LinearLayout>
    </HorizontalScrollView>
</merge>